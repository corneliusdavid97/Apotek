{% extends 'master' %}

{% block content %}

	<div class="col-md-8 col-md-offset-2">
		<br>
		<br>
		<table class="table table-striped">
			<tbody>
				<tr>
					<th class="col-md-2">id</td>
					<td class="col-md-6">{{ compounding.id }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Create Date</th>
					<td class="col-md-6">{{ compounding.created_at }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Update Date</th>
					<td class="col-md-6">{{ compounding.updated_at }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Basic Medicine Id</th>
					<td class="col-md-6">{{ compounding.basicMedID }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Compounding Medicine Id</th>
					<td class="col-md-6">{{ compounding.compMedID }}</td>
				</tr>
			</tbody>
		</table>
		<table>
			<tr>
				<td style="padding-right: 10px;">

    				{{ form.open({ route: 'compounding.edit', params: {id: compounding.id} }) }}
    					{{ form.button('Update','', { class: 'btn btn-success '}) }}
    				{{ form.close() }}

    			</td>
    			<td>
    				{{ form.open({ route: 'compounding.destroy', params: {id: compounding.id} }) }}
    					{{csrfField}}
    					{{ form.button('Delete','', { class: 'btn btn-danger '}) }}

    				{{ form.close() }}
    			</td>
    		</tr>
		</table>
	</div>

{% endblock %}
