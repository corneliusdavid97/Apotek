{% extends 'master' %}

{% block content %}

	<div class="col-md-10 col-md-offset-1">
		<br>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>id</th>
					<th>Create Date</th>
					<th>Update Date</th>
					<th>Name</th>
					<th>Address</th>
					<th>Telp. Number</th>
					<th>KIS Status</th>
					<th>Birth Date</th>
					<th>Age</th>
				</tr>
			</thead>
				<tbody>
				{% for consumer in consumer%}
					<tr>
						<td>{{ consumer.id }}</td>
						<td>{{ consumer.created_at }}</td>
						<td>{{ consumer.updated_at }}</td>
						<td>{{ consumer.name }}</td>
						<td>{{ consumer.address }}</td>
						<td>{{ consumer.TelpNo }}</td>
						<td>{{ consumer.haveKIS }}</td>
						<td>{{ consumer.birthDate }}</td>
						<td>{{ consumer.age }}</td>
						<th><a href="consumer/{{consumer.id}}">View</a></th>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<br>
		{{ form.open({route: 'consumer.create'}) }}
			{{ form.button('Create New Consumer','', { class: 'btn btn-success'}) }}
		{{ form.close() }}
	</div>

{% endblock %}
