{% extends 'master' %}

{% block content %}

	<div class="col-md-10 col-md-offset-2">
		<div class="col-md-offset-2">
		{% if successMessage %}
			<div class="alert alert-success alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<strong>Success!</strong> {{successMessage}}.
			</div>
		{% endif %}
		{% if old('errors') %}
			<div class="alert alert-danger alert-dismissable">
				{% for error in old('errors') %}
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<li> {{ error.message }} </li>
				{% endfor %}
			</div>

		{% endif %}
		</div>
		<div class="form-horizontal">
		{{ form.open({route: 'employee.store'}) }}

			{{csrfField}}

			<div class="form-group">
			{{ form.label('username','Employee Username',{ class: 'col-sm-2 control-label'}) }}
				<div class="col-sm-6">
						{{ form.text('username','',{ class: 'form-control'})}}
				</div>
			</div>

			<div class="form-group">
				{{ form.label('password','Password',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.password('password','',{ class: 'form-control'})}}
    			</div>
    		</div>

				<div class="form-group">
				{{ form.label('role','Employee Division',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.select('role', ['Admin', 'Cashier', 'Pharmacist'], null, 'Select Division') }}
    			</div>
    		</div>

    		<div class="form-group">
    			<div class="col-sm-offset-2 col-sm-10">
    				{{ form.submit('Create','submit', { class: ' btn btn-success'}) }}
    			</div>
    		</div>
    	{{ form.close() }}
		</div>
	</div>

{% endblock %}
