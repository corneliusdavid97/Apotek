{% extends 'master' %}

{% block content %}

	<div class="col-md-10 col-md-offset-2">
		<div class="col-md-offset-2">
		{% if successMessage %}
			<div class="alert alert-success alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<strong>Success!</strong> {{successMessage}}.
			</div>
		{% endif %}
		{% if old('errors') %}
			<div class="alert alert-danger alert-dismissable">
				{% for error in old('errors') %}
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<li> {{ error.message }} </li>
				{% endfor %}
			</div>

		{% endif %}
		</div>
		<div class="form-horizontal">
		{{ form.open({ route: 'employee.update', params: {id: employee.id} }) }}

			{{csrfField}}

			<div class="form-group">
			{{ form.label('name','Consumer Name',{ class: 'col-sm-2 control-label'}) }}
				<div class="col-sm-6">
						{{ form.text('name',employee.name,{ class: 'form-control'})}}
				</div>
			</div>

			<div class="form-group">
				{{ form.label('username','Username',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.text('username',employee.username,{ class: 'form-control'})}}
    			</div>
    		</div>

				<div class="form-group">
					{{ form.label('password','Password',{ class: 'col-sm-2 control-label'}) }}
	    			<div class="col-sm-6">
						<input type="text" name="fname" value={{employee.password}} class="form-control" disabled>
	    			</div>
	    		</div>

				<div class="form-group">
				{{ form.label('TelpNo','Telephone Number',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.text('TelpNo',employee.TelpNo,{ class: 'form-control'})}}
    			</div>
    		</div>

				<div class="form-group">
						<label for="text" class="col-sm-2 control-label">Division</label>
						<div class="col-md-6">
						<select class="form-control" id="role" disabled><br/>
										<option value="">{{employee.role}}</option>
										<br>
											<option value="Cashier">Cashier </option>
										<br>
										``<option value="Pharmacist">Pharmacist </option>
										<br/>
									</select>
						</div>
				</div>

    		<div class="form-group">
    			<div class="col-sm-offset-2 col-sm-10">
    				{{ form.submit('Update','submit', { class: ' btn btn-success'}) }}
    			</div>
    		</div>
    	{{ form.close() }}
		</div>
	</div>

{% endblock %}
