{% extends 'master' %}

{% block content %}

	<div class="col-md-8 col-md-offset-2">
		<table>
			<tr>
				<td style="padding-right: 10px;">

    				{{ form.open({ route: 'pharmacist.edit', params: {id: pharmacist.id} }) }}
    					{{ form.button('Update','', { class: 'btn btn-success '}) }}
    				{{ form.close() }}

    			</td>
    		</tr>
		</table>
		<br>
		<br>
		<table class="table table-striped">
			<tbody>
				<tr>
					<th class="col-md-2">id</td>
					<td class="col-md-6">{{ pharmacist.id }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Create Date</th>
					<td class="col-md-6">{{ pharmacist.created_at }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Update Date</th>
					<td class="col-md-6">{{ pharmacist.updated_at }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Name</th>
					<td class="col-md-6">{{ pharmacist.name }}</td>
				</tr>
				<tr>
					<th class="col-md-2">Telephone Number</th>
					<td class="col-md-6">{{ pharmacist.TelpNo }}</td>
				</tr>

			</tbody>
		</table>
	</div>

{% endblock %}
